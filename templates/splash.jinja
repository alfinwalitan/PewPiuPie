<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Jobbers Splash</title>
  <link rel="stylesheet" href="{{ url_for('static', filename='css/splash.css') }}">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
  <header>
      <div class="logo">Jobbers</div>
      <div class="menu">
            <a href="{{ url_for('auth.signin') }}" class="btn-nav">Sign In</a>
            <a href="{{ url_for('auth.signup') }}" class="btn-nav">Sign Up</a>
      </div>
  </header>
  
  <div class="main-content">
    <h1>Find Your <span class="highlight">Dream Job</span> Today!</h1>
  </div>

  <div class="job-list">
    {% for job in jobs %}
    <div class="job-card">
      <h4>{{ job.job_title }}</h4>
      <p><em>Have Skills in {{ job.skills }}</em></p>
      <p>Min: {{ job.experience }} Years Experience</p>
      <div class="deadline-row">
        <p class="deadline">Available until: <span>{{ job.deadline }}</span></p>
        <a href="{% if session.get('user_id') %}
                    {% if session.get('user_role') == 'admin' %}
                      {{ url_for('dashboard.dashboardhrd') }}
                    {% else %}
                      {{ url_for('dashboard.dashboard_pelamar') }}
                    {% endif %}
                  {% else %}
                    {{ url_for('auth.signin') }}
                  {% endif %}"
           class="view-btn">
          View Details
        </a>
      </div>
    </div>
    {% endfor %}
  </div>

  <div class="footer">
    <div class="social-text">Follow us on</div>
    <div class="social-icons">
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-youtube"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
    </div>
  </div>
</body>
</html>