{% extends "base_hrd.jinja" %}

{% block title %}Dashboard - HRD{% endblock %}

{% block extra_css %}
<link rel="stylesheet" href="{{ url_for('static', filename='dashboard_hrd.css') }}">
{% endblock %}

{% block content %}
    <!-- Tombol post job -->
    <a href="/post-job" class="post-job-btn">+ Post New Job</a>

    <h1>Recruitment Dashboard</h1>
    <p class="welcome-text">Welcome Back, HRD!</p>

    <h2>Active Jobs Postings</h2>
    <div class="job-list">
        {% for job in jobs %}
        <div class="job-card">
            <h4>{{ job.job_title }}</h4>
            <p><em>Have Skills in {{ job.skills }}</em></p>
            <p>Min: {{ job.experience }} Years Experience</p>
            
            <div class="deadline-row">
                <p class="deadline">Available until: <span>{{ job.deadline }}</span></p>
                <a href="#" class="view-btn">View Details</a>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}
